<div class="container">
     <a href="/admin/" class="btn btn=primary"style="background-color: rgb(239, 247, 239);">Back To Admin Page</a>
    <div class="row">
    <div class="mb-3"></div>
    <form action="/admin/addProduct" method="post" id="addProduct">
        <h3 class="text-center">Add New Product</h3>
    <div class="mb-3">    
                        <div class="addProduct">
                            <div class="row">
                                <div class="mb-3">
                                    <label>Product Name</label>
                                    <input class="form-control" type="text" placeholder="Name" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label>ImagePath</label>
                                    <input class="form-control" type="text" name="imagePath" placeholder="Image Path" required>
                                </div>
                                <div class="mb-3">
                                    <label>Description</label>
                                    <input class="form-control" type="text" name="description" placeholder="Description">
                                </div>
                                <div class="mb-3">
                                    <label>Price</label>
                                    <input class="form-control" type="text" name="price" placeholder="Price" required>
                                </div>
                                <div class="mb-3">
                                    <label>Quantity</label>
                                    <input class="form-control" type="number" name="quantity" placeholder="Quantity" required>
                                </div>
                                <div class="mb-3">
                                    <label>Category</label>
                                    <select id="categoryId" name="categoryId">
                                    {{#each categories}}
                                        <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <button class="btn" type="submit">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
    <div class="mb-3"></div>
</div>
</div>