<div class="container" id="allCategories">
     <a href="/admin/" class="btn btn=primary"style="background-color: rgb(239, 247, 239);">Back To Admin Page</a>
  <h3 style="text-align:center">Categories List</h3>
<div class="row">
              <div class="col-md-12">
            <a href="/admin/addCategory" class="btn btn-primary"  id="addNewCategory">Add new category</a>
          </div>
          <div class="col-md-12 py-2">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody class="align-middle">
                  {{#each categories}}
                    <tr id="category{{id}}">
                        <td>{{id}}</td>
                        <td><img src="{{imagePath}}" alt="Image"></td>
                      <td>{{name}}</td>
                      <td>
                        <a href="/admin/editCategory/{{id}}" type="button" class="first btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/admin/deleteCategory/{{id}}" type="button" class="second btn btn-primary" onclick="alert('Do you want to delete this product?');"><i class="fa fa-trash"></i></a>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
</div>
</div>