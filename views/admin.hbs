<div class="container py-2">
      <h3 style="text-align:center">Store Management</h3>
  <div class="row text-center py-3" style="border-color:black" id="leftcolumn">
    <div class="col-md-4">
      <a href="/admin/allProducts">Products List</a>
    </div>
    <div class="col-md-4">
      <a href="/admin/allCategories">Categories List</a>
    </div>
    <div class="col-md-4">
      <a href="/admin/allOrders">Orders List</a>
    </div>
  </div>
  <div class="row py-5">
          <h3 style="text-align:center">Processing Orders</h3>
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th>OrderId</th>
                    <th>Details</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Shipping Address</th>
                    <th>Payment Method</th>
                    <th>Status</th>
                    <th>Process</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody class="align-middle">
                  {{#each orders}}
                    <tr id="order{{id}}">
                        <td>{{id}}</td>
                      <td><a href="/admin/allOrders/{{id}}">Order Details</a></td>
                        <td>{{quantity}}</td>
                      <td>{{total}}</td>
                      <td>{{shippingAddress}}</td>
                      <td>{{paymentMethod}}</td>
                      <td>{{status}}</td>
                      <td>{{process}}</td>
                      <td>
                        <a href="/admin/completeOrder/{{id}}" type="button" class="first btn btn-primary" onclick="alert('Do you want to complete this order?');"><i class="fa-solid fa-check"></i></a>
                        <a href="/admin/cancelOrder/{{id}}" type="button" class="first btn btn-primary" onclick="alert('Do you want to cancel this order?');"><i class="fa-solid fa-ban"></i></a>
                        <a href="/admin/deleteOrder/{{id}}" type="button" class="second btn btn-primary" onclick="alert('Do you want to delete this order?');"><i class="fa fa-trash"></i></a>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
</div>
</div>