        
        <!-- Product Detail Start -->
        <div class="product-detail">
            <div class="container">
                <div class="row py-2">

                </div>
                <div class="row">
                                        {{> left-column }}
                    <div class="col-lg-9">
                        {{#with product}}
                        <div class="row align-items-center product-detail-top">
                            <div class="col-md-5">
                                <div class="product-slider-single">
                                    {{#each Images}}
                                    <img src="{{imagePath}}" alt="{{name}}">
                                    {{/each}}
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="product-content">
                                    <div class="title"><h2>{{name}}</h2></div>
                                    <div class="price">${{price}}</div>
                                    <div class="details">
                                        <p>
                                            {{description}}
                                        </p>
                                    </div>

                                    <div class="quantity">
                                        <h4>Quantity:</h4>
                                        <div class="qty">
                                            <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                            <input type="number" value="1" id="quantity" readonly>
                                            <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                        </div>
                                    </div>
                                    <div class="action">
                                        <a onclick="addCart({{id}}, document.getElementById('quantity').value)"><i class="fa fa-cart-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row product-detail-bottom">
                            <div class="col-lg-12">
                                <ul class="nav nav-pills nav-justified">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="pill" href="#description">Description</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#reviews">Reviews</a>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <div id="description" class="container tab-pane active"><br>
                                        <h4>Product description</h4>
                                        <p>
                                            {{description}}                                        
                                        </p>
                                    </div>
                                    <div id="reviews" class="container tab-pane fade"><br>
                                        {{#each Reviews}}
                                        <div class="reviews-submitted">
                                            <div class="reviewer">{{User.name}}-<span>{{createdAt}}</span></div>
                                            {{{createStarList stars}}}
                                            <p>
                                                {{review}}                                            
                                            </p>
                                        </div>
                                        {{/each}}
                                        <div class="reviews-submit">
                                            <h4>Give your Review:</h4>
                                            <form action="/users/giveReview/{{id}}" method="post">
                                                <fieldset class="rating">
                                                    <input id="demo-1" type="radio" name="stars" value="1"> 
                                                    <label for="demo-1">1 star</label>
                                                    <input id="demo-2" type="radio" name="stars" value="2">
                                                    <label for="demo-2">2 stars</label>
                                                    <input id="demo-3" type="radio" name="stars" value="3">
                                                    <label for="demo-3">3 stars</label>
                                                    <input id="demo-4" type="radio" name="stars" value="4">
                                                    <label for="demo-4">4 stars</label>
                                                    <input id="demo-5" type="radio" name="stars" value="5">
                                                    <label for="demo-5">5 stars</label>
                                                    
                                                    <div class="stars">
                                                        <label for="demo-1" aria-label="1 star" title="1 star"></label>
                                                        <label for="demo-2" aria-label="2 stars" title="2 stars"></label>
                                                        <label for="demo-3" aria-label="3 stars" title="3 stars"></label>
                                                        <label for="demo-4" aria-label="4 stars" title="4 stars"></label>
                                                        <label for="demo-5" aria-label="5 stars" title="5 stars"></label>   
                                                    </div>  
                                                </fieldset>
                                                <div class="row form">
                                                {{!-- <div class="col-sm-6">
                                                    <input type="text" placeholder="Name">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="email" placeholder="Email">
                                                </div> --}}
                                                <div class="col-sm-12">
                                                    <textarea placeholder="Review" name="review" required></textarea>
                                                </div>
                                                <div class="col-sm-12">
                                                    <button>Submit</button>
                                                </div>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        <script>
        (function(){
            var rating = document.querySelector('.rating');
            var handle = document.getElementById('toggle-rating');
            handle.onchange = function(event) {
                rating.classList.toggle('rating', handle.checked);
            };
        }());
    </script>
        <!-- Product Detail End -->
        
        
 