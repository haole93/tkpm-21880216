<div class="container"> <a href="/admin/" class="btn btn=primary"style="background-color: rgb(239, 247, 239);">Back To Admin Page</a>
    {{#with category}}
    <div class="row">
    <div class="mb-3"></div>
    <form action="/admin/editCategory/{{id}}" method="post" id="editCategory">
        <h3 class="text-center">Edit Category</h3>
    <div class="mb-3">    
                        <div class="editCategory">
                            <div class="row">
                                <div class="mb-3">
                                    <label>{{name}}</label>
                                    <input class="form-control" type="text" placeholder="Name" name="name" required>
                                </div>
                                {{/with}}
                                <div class="mb-3">
                                    <button class="btn" type="submit">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
    <div class="mb-3"></div>
</div>
</div>