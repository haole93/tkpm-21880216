
<div class="container" id="allProducts">
  <a href="/admin/" class="btn btn=primary"style="background-color: rgb(239, 247, 239);">Back To Admin Page</a>
  <h3 style="text-align:center">Products List</h3>
  <div class="row">
    <div class="col-md-6">
            <a href="/admin/addProduct" class="btn btn-primary" id="addNewProduct">Add new product</a>
          </div>

  <div class="col-md-6 text-right">
    <form
              action="/admin/allProducts"
              method="GET"
              class="d-flex my-2 my-lg-0 border rounded-pill"
              id="formSearch"
            >
              <input
                class="form-control ms-2 border-0"
                type="text"
                name="keyword"
                required
              />
              <button class="btn my-2 my-sm-0 border-0" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
              </button>
            </form>
  </div>
    </div>
<div class="row py-2">
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody class="align-middle">
                  {{#each products}}
                    <tr id="product{{id}}">
                      <td><a href="/products/{{id}}"><img
                            src="{{imagePath}}"
                            alt="{{name}}"
                          /></a></td>
                      <td><a
                          href="/products/{{id}}"
                        >{{name}}</a></td>
                      <td>{{price}}</td>
                      <td>
                        {{quantity}}
                      </td>
                      <td>
                        <a href="/admin/editProduct/{{id}}" type="button" class="first btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/admin/deleteProduct/{{id}}" type="button" class="second btn btn-primary" onclick="alert('Do you want to delete this product?');"><i class="fa fa-trash"></i></a>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
</div>
</div>

<script>
$(function() {
    $('button.second').confirmButton({
        confirm: "Do you want to delete this product?"
    });
});
</script>